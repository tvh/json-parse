{
    "compilerOptions": {
      "alwaysStrict": true,
      "declaration": true,
      "module": "commonjs",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noPropertyAccessFromIndexSignature": true,
      "outDir": "./dist",
      "strict": true,
      "strictBindCallApply": true,
      "strictFunctionTypes": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "target": "es6",
    },
    "exclude": [
        "tests",
        "dist",
        "node_modules"
    ]
  }
